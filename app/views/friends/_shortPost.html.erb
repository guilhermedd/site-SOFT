<div class="row justify-content-center mb-3">
  <div class="col-6">
    <div class="card">

      <div class="card-header">
        <div class="row">
          <div class="col text-start">
            </strong>
            Created at:
            <%= post.day %> - <%= post.time %></strong>
          </div>
          <div class="col text-end">
            <div class="btn-group dropend">
              <button type="button" class="btn btn-outline-secondary btn-sm dropdown-toggle" data-bs-toggle="dropdown"
                aria-expanded="false">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                  class="bi bi-three-dots-vertical" viewBox="0 0 16 16">
                  <path
                    d="M9.5 13a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zm0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zm0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0z" />
                </svg>
              </button>
              <ul class="dropdown-menu">
                <li>
                  <%= link_to "Edit this post" , edit_post_path(post), class: "dropdown-item" %>
                </li>
                <li>
                  <hr class="dropdown-divider">
                </li>
                <li>
                  <%= button_to "Destroy this post" , post, method: :delete, class:"dropdown-item", data: {
                    confirm: "Are you sure?" , turbo_confirm: "Are you sure?" } %>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
      <div class="card-body">
        <h5 class="card-title">
          <%= post.title %>
        </h5>
        <h6 class="card-title">
          <%= post.summary %>
        </h6>
        <div class="content">
          <p class="card-text">
            <%= post.content %>
          </p>
        </div>
      </div>
      <div class="card-footer text-body-secondary">
        feeling: <%= post.feeling %>
      </div>
    </div>
  </div>
</div>
