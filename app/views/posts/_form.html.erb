<%= form_with(model: post) do |form| %>

  <% if post.errors.any? %>
    <div style="color: red">
      <h2>
        <%= pluralize(post.errors.count, "error" ) %> prohibited this post from being saved:
      </h2>

      <ul>
        <% post.errors.each do |error| %>
          <li>
            <%= error.full_message %>
          </li>
          <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
        <%= form.label :title, for: "exampleFormControlTitle",class: "form-label" %>
        <%= form.text_field :title, class: "form-control", placeholder: "Write a nice title" %>
  </div>
  <div class="mb-3">
    <%= form.label :summary, for: "exampleFormControlTitle" ,class: "form-label" %>
    <%= form.text_field :summary, class: "form-control" , placeholder: "What happened?" %>
  </div>
  <div class="mb-3">
    <%= form.label :content, for: "exampleFormControlTextarea1", class: "form-label" %>
    <%= form.text_area :content, class: "form-control", id: "exampleFormControlTextarea1", rows: "3", placeholder: "Here is the place you write down whatever you want" %>
  </div>
  <div class="mb-3">
    <%= form.label :feeling, for: "exampleFormControlTitle", class: "form-label"%>
    <%= form.text_field :feeling, class: "form-control", id: "exampleFormControlTitle", placeholder: "How were you feeling?" %>
  </div>
  <div>
    <%= form.label :public, 'Public' %>
    <%= form.check_box :public %>
  </div>


  <div>
    <%= form.submit "Submit" , class: "btn btn-primary" %>
  </div>
<% end %>
